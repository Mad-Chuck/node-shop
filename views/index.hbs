<div class="row">

    <div id="carousel" class="carousel slide col-sm-12 col-md-8" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel" data-slide-to="0" class="active"></li>
            <li data-target="#carousel" data-slide-to="1"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="http://pensfactory.pl/upload/images/products/big/PPP_Pencase_White7578.jpg" alt="...">
                <div class="carousel-caption">
                    <h3>Title</h3>
                    <p>opis</p>
                </div>
            </div>
            <div class="item">
                <img src="http://pensfactory.pl/upload/images/products/big/Airfit_Bp_Tip_Heavy_5391.jpg" alt="...">
                <div class="carousel-caption">
                    <h3>Title</h3>
                    <p>opis</p>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="col-xs-6 col-md-4">
        <a href="#" class="thumbnail">
            <img src="http://pensfactory.pl/upload/images/products/big/Waterfall_Mod_Premium_Black958.jpg" alt="...">
        </a>
    </div>
    <div class="col-xs-6 col-md-4">
        <a href="#" class="thumbnail">
            <img src="http://pensfactory.pl/upload/images/products/medium/Flying_Panda_White_and_Black258.jpg" alt="...">
        </a>
    </div>

</div>

<div class="row">
    {{#each products}}
    <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
            <img src="{{this.imagePath}}" alt="...">
            <div class="caption">
                <a href="/product/{{this.url}}"><h3>{{this.title}}</h3></a>
                <p>{{this.description}}</p>
                <div class="clearfix">
                    <div class="price pull-left">{{this.price}} z≈Ç</div>
                    <a href="shopping-cart/add?qty=1&productId={{this._id}}" class="btn btn-primary pull-right" role="button"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Add to cart</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>